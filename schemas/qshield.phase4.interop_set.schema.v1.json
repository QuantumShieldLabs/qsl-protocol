{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "qshield.phase4.interop_set.schema.v1.json",
  "title": "QuantumShield Phase 4 Interop Set (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["format", "schema_version", "protocol", "cases"],
  "properties": {
    "format": { "const": "QSHIELD-P4-INTEROP-SET-1" },
    "schema_version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" },
    "generated_at": { "type": "string", "format": "date-time" },
    "protocol": {
      "type": "object",
      "additionalProperties": false,
      "required": ["protocol_version", "suite_id"],
      "properties": {
        "protocol_version": { "type": "string", "pattern": "^0x[0-9a-fA-F]{4}$" },
        "suite_id": { "type": "string", "pattern": "^0x[0-9a-fA-F]{4}$" },
        "suite_name": { "type": "string" }
      }
    },
    "cases": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/case" }
    }
  },
  "$defs": {
    "id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "pattern": "^[A-Za-z0-9._:-]+$"
    },
    "typed_data": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "data"],
      "properties": {
        "type": { "type": "string", "enum": ["b64u", "hex", "utf8", "json"] },
        "data": {},
        "semantic": { "type": "string" },
        "note": { "type": "string" }
      },
      "allOf": [
        {
          "if": { "properties": { "type": { "const": "json" } } },
          "then": { "properties": { "data": { "type": ["object", "array"] } } }
        },
        {
          "if": { "properties": { "type": { "enum": ["b64u", "hex", "utf8"] } } },
          "then": { "properties": { "data": { "type": "string" } } }
        }
      ]
    },
    "participant": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "role"],
      "properties": {
        "id": { "type": "string", "minLength": 1, "maxLength": 40 },
        "role": { "type": "string", "minLength": 1, "maxLength": 80 },
        "implementation": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "name": { "type": "string" },
            "version": { "type": "string" },
            "commit": { "type": "string" }
          }
        }
      }
    },
    "step": {
      "type": "object",
      "additionalProperties": false,
      "required": ["seq", "actor", "op"],
      "properties": {
        "seq": { "type": "integer", "minimum": 1 },
        "actor": { "type": "string", "minLength": 1, "maxLength": 40 },
        "op": { "type": "string", "minLength": 1, "maxLength": 120 },
        "input": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/typed_data" }
        },
        "expect": {
          "type": "object",
          "additionalProperties": false,
          "required": ["ok"],
          "properties": {
            "ok": { "type": "boolean" },
            "reason_code": { "type": "string" },
            "output": {
              "type": "object",
              "additionalProperties": { "$ref": "#/$defs/typed_data" }
            }
          },
          "allOf": [
            {
              "if": { "properties": { "ok": { "const": false } } },
              "then": { "required": ["reason_code"] }
            }
          ]
        },
        "notes": { "type": "string" },
        "ext": { "type": "object", "additionalProperties": true }
      }
    },
    "assertion": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "ok"],
      "properties": {
        "name": { "type": "string", "minLength": 1, "maxLength": 120 },
        "ok": { "type": "boolean" },
        "details": { "type": "string" }
      }
    },
    "case": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "participants", "steps", "assertions"],
      "properties": {
        "id": { "$ref": "#/$defs/id" },
        "title": { "type": "string" },
        "profile": { "type": "string" },
        "participants": { "type": "array", "minItems": 2, "items": { "$ref": "#/$defs/participant" } },
        "steps": { "type": "array", "minItems": 1, "items": { "$ref": "#/$defs/step" } },
        "assertions": { "type": "array", "minItems": 1, "items": { "$ref": "#/$defs/assertion" } },
        "spec_refs": { "type": "array", "items": { "type": "string" } },
        "ext": { "type": "object", "additionalProperties": true }
      }
    }
  }
}
